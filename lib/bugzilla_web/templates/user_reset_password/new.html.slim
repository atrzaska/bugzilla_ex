= render_shared "_auth_header.html", assigns

= form_for :user, Routes.user_reset_password_path(@conn, :create), [class: "form-signin bg-white p-4"], fn f ->
  h3.mb-3.font-weight-normal Password recovery
  p.mb-4.text-secondary Enter the email you're using for your account.

  .form-group
    = email_input f, :email, required: true, class: "form-control", placeholder: "Email address"
  .form-group
    = submit "Continue", class: "btn btn-lg btn-primary btn-block"
